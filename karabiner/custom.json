{
  "title": "@_ddrscott_ custom settings",
  "rules": [
    {
      "description": "Change caps_lock to control if pressed with other keys, to caps_lock if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape",
              "hold_down_milliseconds": 50
            }
          ]
        }
      ]
    },
    {
      "description": "Remote Desktop/Citrix left_command becomes left_alt",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.citrix.*" ]
            }
          ]
        }
      ]
    },
    {
      "description": "Remote Desktop/Citrix Copy/Paste sends DOS Copy/Paste",
      "manipulators": [
        {
          "type": "basic",
          "from": [
            {
              "key_code": "c",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            }
          ],
          "to": {
            "key_code": "insert",
            "modifiers": [ "left_control" ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.citrix.*" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": [
            {
              "key_code": "v",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            }
          ],
          "to": {
            "key_code": "insert",
            "modifiers": [ "left_shift" ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.citrix.*" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": [
            {
              "key_code": "x",
              "modifiers": {
                "mandatory": [
                  "left_command"
                ],
                "optional": [
                  "any"
                ]
              }
            }
          ],
          "to": {
            "key_code": "delete_forward",
            "modifiers": [ "left_shift" ]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.citrix.*" ]
            }
          ]
        }
      ]
    }
  ]
}
